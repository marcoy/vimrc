snippet exe "Executable"
executable ${1}
	main-is:
		${2:$1.hs}
	other-modules:
	default-extensions:
	hs-source-dirs:
		src
	default-language:
		Haskell2010
	ghc-options:
		-Wall -threaded -rtsopts -with-rtsopts=-N
	build-depends:
		base == 4.*$0
endsnippet

snippet lib "Library"
library
	exposed-modules:$0
	other-modules:
	hs-source-dirs:
		src
	default-language:
		Haskell2010
	ghc-options:
		-Wall -threaded -rtsopts -with-rtsopts=-N
	build-depends:
		base == 4.*
endsnippet
